<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Nome da Lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNomeLista"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="@string/txtItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/txtNomeLista"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="Qtde Itens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQtde"
        android:layout_marginRight="47dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginEnd="13dp"
        android:layout_toLeftOf="@+id/textView2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtQtde"
        android:layout_toStartOf="@+id/txtQtde"
        android:layout_marginEnd="15dp"
        android:id="@+id/txvListaID"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/txtQtde"
        android:layout_marginRight="15dp" />

</RelativeLayout>
