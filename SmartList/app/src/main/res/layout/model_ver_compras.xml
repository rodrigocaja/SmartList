<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIDCompra"
        android:layout_above="@+id/txtListaBase"
        android:layout_alignStart="@+id/txtDataCompra"
        android:visibility="gone"
        android:layout_alignLeft="@+id/txtDataCompra" />

    <TextView
        android:text="idLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtListaBase"
        android:layout_alignStart="@+id/txtListaBase"
        android:id="@+id/txtIDListaBase"
        android:visibility="gone"
        android:textSize="8sp"
        android:layout_alignLeft="@+id/txtListaBase" />

    <TextView
        android:text="Lista Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtListaBase"
        android:layout_alignBottom="@+id/txtDataCompra"
        android:textAlignment="viewStart"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="ModoCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDataCompra"
        android:layout_alignStart="@+id/txtDataCompra"
        android:id="@+id/txvModoCompra"
        android:visibility="gone"/>

    <TextView
        android:text="Valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:id="@+id/txtValor"
        android:layout_marginRight="34dp"
        android:layout_alignBaseline="@+id/txtListaBase"
        android:layout_alignBottom="@+id/txtListaBase"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/UnidadeMonet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUnMonet"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignBaseline="@+id/txtDataCompra"
        android:layout_alignBottom="@+id/txtDataCompra"
        android:layout_toLeftOf="@+id/txtValor"
        android:layout_toStartOf="@+id/txtValor" />

    <TextView
        android:text="Data da Compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/txtDataCompra"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtIDListaBase"
        android:layout_toEndOf="@+id/txtIDListaBase" />

</RelativeLayout>